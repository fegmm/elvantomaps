<script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"
        integrity="sha512-gZwIG9x3wUXg2hdXF6+rVkLF/0Vi9U8D2Ntg4Ga5I5BZpVkVxlJWbSQtXPSiUTtC0TjtGOmxa1AJPuV0CPthew=="
        crossorigin=""></script>
<script src="https://unpkg.com/leaflet.markercluster@1.4.1/dist/leaflet.markercluster.js"></script>
<script>
    function loadData() {
        return fetch("/getData")
            .then(response => response.json());
    }

    (function () {
        var mymap = L.map('mapid').setView([48.137154, 11.576124], 13);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(mymap);

        loadData()
            .then(data => {
                var markers = L.markerClusterGroup();
                data.forEach(item => {
                    var table = `<table style="width:100%" class="table table-striped">
                                    <tr>
                                    @foreach (var item in Environment.GetEnvironmentVariable("PERSON_DISPLAY_FIELDS_NAMES").Split(","))
                                    {
                                        <th>@item</th>
                                    }
                                    </tr>`;

                    item.person.forEach(person => {
                        table += `<tr>
                                    @foreach (var item in Environment.GetEnvironmentVariable("PERSON_DISPLAY_FIELDS_VALUES").Split(","))
                                    {
                                        @if (item == "age")
                                        {
                                            <td>` + (Math.abs(new Date(Date.now() - Date.parse(person.birthday)).getUTCFullYear() - 1970) || '-') + `</td>
                                        } else if (item == "picture") {
                                           <td><img src="` + person.picture	+ `" style="height: 20; width: 40px;"></td>
                                        } else
                                        {
                                            <td>` + person.@item + `</td>
                                            }
                                        }
                                    </tr>`;
                    });

                    table += '</table>';
                    table = `<div><strong>` + item.location.formattedAddress + `</strong></div><hr>` + table;

                    markers.addLayer(L.marker([item.location.latitude, item.location.longitude]).bindPopup(table));
                });
                mymap.addLayer(markers);
                $("#loading").remove();
            });
    })();
</script>